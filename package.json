{
  "name": "lightning-flow-scanner-core",
  "version": "5.9.4",
  "main": "index.js",
  "types": "index.d.ts",
  "type": "commonjs",
  "engines": {
    "node": " ^18 || ^20 || ^22 || ^23"
  },
  "scripts": {
    "build": "npm run swc:build",
    "test": "jest",
    "lint": "eslint {src,tests}",
    "clean": "rm -rf out dist types",
    "prepare": "husky",
    "precommit": "lint-staged",
    "prepush": "npm run clean && npm run swc:sim:pack && npm run test",
    "postversion": "cp package.json .. && cp package-lock.json ..",
    "swc:build": "swc src --out-dir out",
    "swc:gen:types": "tsc -p tsconfig.types.json --declaration --emitDeclarationOnly",
    "swc:cp:files": "cp ./readme.md ./package*.json ./out/src && cp -R ./files/media ./out/src",
    "swc:cp:types": "npm run swc:gen:types && cp -R ./types/* ./out/src",
    "swc:sim:pack": "npm run swc:build && npm run swc:cp:files && npm run swc:cp:types",
    "swc:build:link": "npm run swc:sim:pack && npm link ./out/src",
    "vite:dist": "npm run swc:build && vite build",
    "test:vite": "vitest",
    "stryker": "npm i -g @stryker-mutator/core @stryker-mutator/jest-runner && stryker run"
  },
  "license": "MIT",
  "description": "A purpose-built engine to assess and enhance Salesforce Flow automations.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flow-Scanner/lightning-flow-scanner-core.git"
  },
  "dependencies": {
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@jest/types": "30.0.1",
    "@swc-node/jest": "1.8.13",
    "@swc/cli": "0.7.7",
    "@swc/core": "1.12.7",
    "@swc/helpers": "0.5.17",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.30",
    "@types/semantic-release": "20.0.6",
    "eslint": "9.30.0",
    "eslint-plugin-de-morgan": "1.3.0",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-sonarjs": "3.0.4",
    "husky": "9.1.7",
    "jest": "30.0.3",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0",
    "vite": "6.3.5",
    "vite-plugin-node-polyfills": "0.23.0",
    "vitest": "3.2.4"
  },
  "homepage": "https://flow-scanner.github.io/lightning-flow-scanner-core",
  "author": {
    "name": "Ruben Halman",
    "url": "https://github.com/RubenHalman"
  },
  "volta": {
    "node": "20.13.1"
  },
  "keywords": [
    "salesforce",
    "flow",
    "linter",
    "static-analysis",
    "static-code-analysis",
    "flow-scanner",
    "flow-analysis",
    "flow-linter",
    "metadata-scanner",
    "security-scanner",
    "best-practices",
    "salesforce-flow"
  ]
}
