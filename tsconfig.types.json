{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "out",
    "lib": ["es2020.string", "es6"],
    "experimentalDecorators": true,
    "sourceMap": false,
    "rootDir": "src",
    "strict": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "node_modules/**",
    "assets/example-flows/**",
    "tests/**/*.ts",
    "jest.config.ts",
    "vite.config.ts",
    "jest.setup.ts"
  ]
}
