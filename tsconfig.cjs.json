{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "types",
    "lib": ["es2020.string", "es6"],
    "experimentalDecorators": true,
    "sourceMap": false,
    "rootDir": "src",
    "strict": false /* enable all strict type-checking options */,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "types/**",
    "out/**",
    ".idea/**",
    "src/data/CustomRuleExample.ts",
    "tests/**/*.test.ts",
    "jest.config.ts"
  ],
}
